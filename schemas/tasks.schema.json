{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Firestore ToDo App Task Document",
  "type": "object",
  "properties": {
    "completed": {
      "type": "boolean",
      "description": "Whether the task is completed."
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the task was created (ISO 8601 format)."
    },
    "details": {
      "type": "string",
      "description": "Detailed description of the task."
    },
    "title": {
      "type": "string",
      "description": "Title of the task."
    },
    "user": {
      "type": "string",
      "pattern": "^\/users\/[A-Za-z0-9_-]+$",
      "description": "Reference to the user document (Firestore document path)."
    }
  },
  "required": ["completed", "created", "details", "title", "user"],
  "additionalProperties": false
}